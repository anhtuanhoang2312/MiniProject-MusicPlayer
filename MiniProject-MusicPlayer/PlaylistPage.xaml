<UserControl x:Class="MiniProject_MusicPlayer.PlaylistPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MiniProject_MusicPlayer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ListView Name="PlayListListViewPage" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Remove from playlist" Click="RemoveMenuItem_Click"/>
                </ContextMenu>
            </ListView.ContextMenu>
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="TITLE" Width="250" DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="ARTIST" Width="200" DisplayMemberBinding="{Binding Artist}" />
                    <GridViewColumn Header="ALBUM" Width="200" DisplayMemberBinding="{Binding Album}" />
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
